<form action="/users/<%= session[:id] %>/surveys/create" method="post" id="add-question">
  <label for="text">Question: </label><br>
  <input type="input" size="70" name="text" id="question-text" placeholder="Enter a new question:"><br><br>
  <input id="add-question" type="submit" value="Add Question">
</form>

<ol>
  <% @questions_list.each do |question| %>
  <li>
    <%= question %>
  </li>
  <% end %>
</ol>
